public class DaftarBuah {
    public static void main(String[] args) {
        // Membuat array bertipe String untuk menyimpan nama-nama buah
        String[] buah = {"Apel", "Mangga", "Pisang", "Jeruk", "Anggur"};

        // Menampilkan jumlah buah dalam array
        System.out.println("Jumlah buah dalam daftar: " + buah.length);
        System.out.println("Daftar buah:");

        // Menggunakan loop for untuk mengakses dan menampilkan setiap elemen dalam array
        for (int i = 0; i < buah.length; i++) {
            System.out.println("- " + buah[i]);
        }

        System.out.println("\nMenampilkan buah menggunakan enhanced for-loop:");
        // Menggunakan enhanced for-loop (for-each loop) untuk menampilkan setiap elemen
        for (String namaBuah : buah) {
            System.out.println("- " + namaBuah);
        }
    }
}
